@model IEnumerable<DaChuang.Models.ColleageScoreLine>

@{
    ViewBag.Title = "SameRankRecommend";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<hr />
<h2 class="text-center">同位分推荐大学</h2>

<p>
    @using (Html.BeginForm("SameRankRecommend", "ScoreSegments", FormMethod.Get))
    {

        <div class="form-inline">
            <div class="form-group col-md-2">

                @Html.Label("省份")
                @Html.DropDownList("provinceid", ViewBag.provinceid as SelectList, "全部", new { @class = "form-control" })
            </div>


            <div class="form-group col-md-3">

                @Html.Label("学生类型")
                @Html.DropDownList("studentTypeid", ViewBag.studentTypeid as SelectList, "全部", new { @class = "form-control" })

            </div>

            <div class="form-group col-md-2">

                @Html.Label("年份")
                @Html.DropDownList("select_year", ViewBag.select_year as SelectList, "全部", new { @class = "form-control" })

            </div class="form-group col-md-3">
               分数 @Html.TextBox("score", null, new { @class = "form-control", @Style = "display:inline" })
            <div>

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-2">
                    <input type="submit" value="查找" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ColleageCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Colleage.ColleageName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Batch.BatchName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Colleage.City.CityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Province.ProvinceName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StudentType.StudentTypeDetail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxScore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Average)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BatchScore)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Year)
        </th>
        <th>
            学校详情
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ColleageCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Colleage.ColleageName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Batch.BatchName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Colleage.City.CityName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Province.ProvinceName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StudentType.StudentTypeDetail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MaxScore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Average)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BatchScore)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Year)
        </td>
        <td>
            @Html.ActionLink("学校详情","Details","Colleages", new { id=item.ColleageCode }, null)
        </td>
    </tr>
    }

</table>
